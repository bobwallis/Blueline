{% extends chromeless ? 'BluelineBundle::base.chromeless.html.twig': 'BluelineBundle::base.html.twig' %}

{% block title %}Composition Prover | {{ parent() }}{% endblock %}
{% set search = false %}

{% block body %}
	{% from 'BluelineBundle:Macros:header.html.twig' import header %}
	<section class="text">
		{{ header('Composition Prover') }}
		<div class="wrap gsiril">
			<p>This page contains a simple web interface for Richard Smith's <a href="http://www.ex-parrot.com/~richard/gsiril/" class="external">GSiril</a> touch proving program. <a href="{{ path( 'Blueline_Services_siril_why' ) }}">Here</a> are some notes on why and how this has been achieved.</p>
			<p>Enter the composition in the box below in the MicroSiril or GSiril language and click "Prove".</p>
			<h2>Input</h2>
			<p><label>Syntax&nbsp;&nbsp;</label><select id="gsiril_format"><option>MicroSiril</option><option>GSiril</option></select></p>
			<p><textarea id="gsiril_input" class="expanding" placeholder="Enter composition in GSiril/MicroSiril syntax"></textarea></p>
			<input id="gsiril_go" value="Prove" type="button" />
			<h2>Output</h2>
			<div id="gsiril_output">...</div>
		</div>
		{% autoescape false %}
		<script>require(['services/Gsiril'],function(a){a.init();});</script>
		{% endautoescape %}
	</section>
{% endblock %}
