{% if doveids is defined %}
{% for doveid in doveids %}
{% render path('Blueline_Towers_view', {'doveid':doveid, '_format':'txt'}) with {}, {'standalone':true} %}
{% endfor %}
{% else %}
{% autoescape false %}
{{ tower.place }} ({{ tower.dedication }})
{% if tower.country in ['USA','Australia'] %}
	State:     	{{ tower.county }}
{% elseif tower.country in ['Canada'] %}
	Province:  	{{ tower.county }}
{% else %}
	County:    	{{ tower.county }}
{% endif %}
	Country:   	{{ tower.country }}
	Bells:     	{{ tower.bells }}
	Tenor:     	{{ (tower.weightApprox?'~':'')~tower.weightText }} in {{ tower.note|addAccidentals }}{{ tower.hz is not empty? ' ('~tower.hz~'Hz)' : '' }}
{% if tower.diocese is not empty %}
	Diocese:   	{{ tower.diocese }}
{% endif %}
{% if tower.postcode is not empty %}
{% if tower.country in ['USA'] %}
	Zip Code:  	{{ tower.postcode }}
{% else %}
	Postcode:  	{{ tower.postcode }}
{% endif %}
{% endif %}
{% if tower.gridReference is not empty %}
	Grid Ref.: 	{{ tower.gridReference }}
{% endif %}
	Location:  	{{ tower.latitude }}, {{ tower.longitude }}
{% if tower.webPage is not empty %}
	Website:   	{{ tower.webPage }}
{% endif %}
{% if tower.toilet or tower.simulator %}
	Facilities:	{% if tower.toilet %}Toilet {% endif %}{% if tower.simulator %}Simulator{% endif %}

{% endif %}
{% if tower.extraInfo is not empty %}
	Info.:     	{{ tower.extraInfo }}
{% endif %}
{% if tower.practiceNight > 0 or tower.practiceNotes is not empty %}
	Practice:    	{{ dayToString( tower.practiceNight ) }}{{ tower.practiceStart is not empty?', '~tower.practiceStart : '' }}{{ tower.practiceNotes is not empty? ' - '~tower.practiceNotes : '' }}
{% endif %}

{% endautoescape %}
{% endif %}
