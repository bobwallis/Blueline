<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
		<title>{% block title %}Blueline{% endblock %}</title>
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="format-detection" content="telephone=no" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="application-name" content="Blueline" />
		<meta name="msapplication-starturl" content="{{ url('Blueline_welcome') }}" />
		<meta name="msapplication-navbutton-color" content="#002147" />
{% if ICBM is defined %}
		<meta name="icbm" content="{{ ICBM.latitude }}, {{ ICBM.longitude }}" />
		<meta name="geo.position" content="{{ ICBM.latitude }};{{ ICBM.longitude }}" />
		<meta name="geo.placename" content="{{ ICBM.placename }}" />
{% endif %}
		<link rel="search" type="application/opensearchdescription+xml" href="/services/opensearch/associations.xml" title="Associations | Blueline" />
		<link rel="search" type="application/opensearchdescription+xml" href="/services/opensearch/methods.xml" title="Methods | Blueline" />
		<link rel="search" type="application/opensearchdescription+xml" href="/services/opensearch/towers.xml" title="Towers | Blueline" />
		<link rel="icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}" sizes="any" />
		<link rel="alternate shortcut icon" type="image/x-ixon" href="{{ asset('favicon.ico') }}" sizes="16x16,24x24,48x48" />
		<!--[if lt IE 9]><script src="/scripts/ieCompat.js"></script><![endif]-->
{% stylesheets '@BluelineCCCBRDataBundle/Resources/public/css/default/*' output='css/default.css' filter='?yui_css' %}
		<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% stylesheets '@BluelineCCCBRDataBundle/Resources/public/css/print/*' output='css/print.css' filter='?yui_css' %}
		<link rel="stylesheet" media="print" href="{{ asset_url }}" />
{% endstylesheets %}
		<script src="/scripts/helpers/jquery.js"></script>
		<script data-main="/scripts/main" src="/scripts/require.js"></script>
{% if ga_trackingCode is defined %}
		<script>var _gaq=_gaq || [];_gaq.push(['_setAccount', '{{ ga_trackingCode }}']);_gaq.push(['_trackPageview']);(function(){var ga=document.createElement('script');ga.type='text/javascript';ga.async=true;ga.src=('https:'==document.location.protocol?'https://ssl':'http://www')+'.google-analytics.com/ga.js';var s=document.getElementsByTagName('script')[0];s.parentNode.insertBefore(ga,s);})();</script>
{% endif %}
	</head>
	<body>
		<div id="wrapper">
			<header id="top" role="banner">
				<h1><a href="{{ path('Blueline_welcome') }}">Blueline</a></h1>
				<div id="breadcrumbContainer">
					{% for crumb in breadcrumb|default([]) %}
					<span class="headerSep">&raquo;</span>
					<h2><a href="{{ crumb.href }}">{{ crumb.title }}</a></h2>
					{% endfor %}
				</div>
				<div id="topSearchContainer"{{ search_header|default(false) ? '' : 'style="display: none;"' }}>
					<span class="headerSep">&raquo;</span>
					<form id="topSearch" role="search" action="{{ search_action|default(path( 'Blueline_search' )) }}">
						<input type="text" accesskey="/" name="q" id="smallQ" spellcheck="false" autocomplete="off" placeholder="{{ search_placeholder|default('Search') }}" />
						<button type="submit" title="Search"><span class="hide">Search</span></button>
					</form>
				</div>
			</header>
			<div id="bigSearchContainer"{{ search_big|default(false) ? '' : 'style="display: none;"' }}>
				<form id="bigSearch" role="search" action="{{ search_action|default(path( 'Blueline_search' )) }}">
					<div>
					<input type="text" accesskey="/" name="q" id="bigQ" spellcheck="false" autocomplete="off" placeholder="{{ search_placeholder|default('Search') }}" value="{{ search_query|default('') }}" />
					<button type="submit" title="Search"><span class="hide">Search</span></button>
					</div>
				</form>
			</div>
			<div id="content" role="main">
				{% block body %}{% endblock %}
			</div>
			<div id="push"></div>
		</div>
		<footer id="bottom">
			<nav role="navigation"><a href="{{ path('Blueline_welcome') }}">Home</a> | <a href="{{ path('Blueline_Associations_welcome') }}">Associations</a> | 	<a href="{{ path('Blueline_Methods_welcome') }}">Methods</a> | <a href="{{ path('Blueline_Towers_welcome') }}">Towers</a></nav>
			<p role="contentinfo"><a href="{{ path('Blueline_page', { 'page':'about' }) }}">About</a> | <a href="{{ path('Blueline_page', { 'page':'copyright' }) }}">Copyright</a> | Blueline &copy; MMXI</p>
		</footer>
	</body>
</html>
