#!/bin/bash

dWhich=`which "$0"`
d=`dirname "$dWhich"`
cd "$dWhich"

# Execute RequireJS builder
./helpers/requirejs/build/build.sh app.build.js

# YUI Compress, and GZip the built CSS files
yuicompressor --type css --line-break 120 ../../www-build/styles/main.css > ../../www/styles/main.built.css
gzip -9c ../../www/styles/main.built.css > ../../www/styles/main.built.css.gz
yuicompressor --type css --line-break 120 ../../www-build/styles/print.css > ../../www/styles/print.built.css
gzip -9c ../../www/styles/print.built.css > ../../www/styles/print.built.css.gz

# Remove www-build directory
rm -rf ../../www-build